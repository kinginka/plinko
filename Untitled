timeline = {
  0: {x,y},
  2: {x,y},
  4: {x,y},
  6: {x,y}
}

if timeline[N] # You're good
  return timeline[N]
else if timeline[N] < timeline.last # Interpolate

  for i in timeline:
    if i < N
      start = i
    else if i > N
      end = i

      interpolationFactor = (N - start) / (end - start)
      startCoord = timeline[start]
      endCoord = timeline[end]

      return {
        x: startCoord.x + (endCoord.x - startCoord.x) * interpolationFactor,
        y: startCoord.y + (endCoord.y - startCoord.y) * interpolationFactor
      }

else if timeline[N] > timeline.last # Extrapolate
